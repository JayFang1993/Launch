<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:background="#ffffff"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:background="#e1e1e1"
            android:id="@+id/detail_desc"
            android:layout_height="128dp">
            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:id="@+id/tv_title"
                android:text="求一碗热干面"
                android:textColor="#000000"
                android:layout_marginLeft="16sp"
                android:layout_marginTop="16sp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:id="@+id/rl_address"
                android:layout_below="@id/tv_title"
                android:layout_marginTop="24dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_shitang"
                    android:src="@drawable/ic_pin_drop"
                    android:layout_width="16sp"
                    android:layout_marginLeft="16sp"
                    android:layout_height="16sp" />

                <TextView
                    android:layout_toRightOf="@+id/iv_shitang"
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/tv_shitang"
                    android:textColor="#555555"
                    android:text="韵苑食堂"
                    android:layout_marginLeft="4sp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="16sp"
                    android:id="@+id/iv_sushe"
                    android:src="@drawable/ic_arrow_back_orange"
                    android:layout_toRightOf="@id/tv_shitang"
                    android:layout_height="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:id="@+id/tv_sushe"
                    android:text="韵苑9栋"
                    android:textColor="#555555"
                    android:layout_toRightOf="@id/iv_sushe"
                    android:layout_marginLeft="4sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="11:00-12:00"
                    android:layout_marginRight="16dp"
                    android:textSize="18sp"
                    android:id="@+id/tv_time"
                    android:textColor="#fa9723"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <ImageView
                android:layout_below="@id/rl_address"
                android:layout_width="16sp"
                android:id="@+id/iv_baochou"
                android:src="@drawable/ic_rmb"
                android:layout_marginTop="8sp"
                android:layout_marginLeft="16sp"
                android:layout_height="16sp" />
            <TextView
                android:layout_below="@id/rl_address"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:id="@+id/tv_award"
                android:text="可约一杯咖啡"
                android:layout_toRightOf="@id/iv_baochou"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="8sp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:id="@+id/rl_talk"
            android:layout_below="@+id/detail_desc"
            android:layout_height="fill_parent"
            >
            <LinearLayout
                android:id="@+id/ll_talk"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="fill_parent">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="48dp"
                        android:src="@drawable/icon"
                        android:id="@+id/iv_icon1"
                        android:layout_height="48dp" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:padding="12dp"
                        android:background="@drawable/talk_left"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:id="@+id/tv_detail"
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:text="不要葱、姜、蒜，放点酱油，O(∩_∩)O谢谢"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_width="fill_parent"
                    android:id="@+id/rl_talk2"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="48dp"
                        android:id="@+id/iv_icon2"
                        android:src="@drawable/icon"
                        android:layout_alignParentRight="true"
                        android:layout_height="48dp" />
                    <RelativeLayout
                        android:padding="12dp"
                        android:layout_width="wrap_content"
                        android:layout_toLeftOf="@id/iv_icon2"
                        android:background="@drawable/talk_right"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:layout_marginLeft="8dp"
                            android:text="我去"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_marginTop="16dp"
                    android:id="@+id/ll_talk3"
                    android:layout_marginLeft="12sp"
                    android:layout_marginRight="12sp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="48dp"
                        android:id="@+id/iv_icon3"
                        android:src="@drawable/icon"
                        android:layout_height="48dp" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:background="@drawable/talk_left"
                        android:padding="12dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:textSize="18sp"
                            android:id="@+id/tv_phone"
                            android:layout_marginLeft="8dp"
                            android:text="Call Me:1234567890"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <Button
            android:layout_width="fill_parent"
            android:id="@+id/btn_send"
            android:background="@drawable/ic_send"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginBottom="24dp"
            android:text="我送"
            android:textColor="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_height="56dp" />
    </RelativeLayout>
</android.support.design.widget.AppBarLayout>